echo "ğŸ” Executando pre-commit hook..."

current_branch=$(git rev-parse --abbrev-ref HEAD)

if [ "$current_branch" = "main" ]; then
    echo "ğŸš« Branch 'main' detectada. Pulando execuÃ§Ã£o dos testes e do PHPStan."
    exit 0
fi

staged_files=$(git diff --name-only --cached --diff-filter=d)

if [ -z "$staged_files" ]; then
    echo "ğŸš« Nenhum arquivo staged encontrado."
    exit 0
fi

run_formatter() {
    local formatter="$1"
    local file="$2"

    if [ ! -f "$file" ]; then
        echo "âš ï¸ Arquivo $file nÃ£o encontrado. Pulando."
        return
    fi

    echo "âœ¨ Formatando $file com $formatter"
    docker exec -i starterkit-app $formatter "$file"
    git add "$file"
}

run_phpstan() {
    echo "ğŸ” Executando anÃ¡lise com PHPStan..."
    docker exec -i starterkit-app vendor/bin/phpstan analyse || {
        echo "âŒ Falha na anÃ¡lise do PHPStan. Corrija os problemas antes de commitar."
        exit 1
    }
}

run_tests() {
    local coverage_mode="$1"
    echo "ğŸ§ª Executando testes para a branch '$current_branch' $coverage_mode..."

    echo "ğŸ”„ Limpando cache antes de executar os testes..."
    docker exec -i starterkit-app php artisan optimize:clear

    docker exec -i starterkit-app php artisan test --env=testing --parallel $coverage_mode || {
        echo "âŒ Falha nos testes. Corrija os problemas antes de commitar."
        exit 1
    }
}

for file in $staged_files; do
    if [ ! -f "$file" ]; then
        echo "âš ï¸ Arquivo $file nÃ£o encontrado. Pulando."
        continue
    fi

    case "$file" in
    *.php)
        run_formatter "./vendor/bin/pint" "$file"
        ;;
    esac
done

echo "ğŸ” Executando lint JavaScript/Vue..."
docker exec -i starterkit-app npm run lint || {
    echo "âŒ Lint falhou ou apresentou warnings. Corrija antes de commitar."
    exit 1
}

if [ "$current_branch" != "main" ]; then
    run_phpstan
fi

case "$current_branch" in
hml)
    run_tests ""
    ;;
main)
    exit 0
    ;;
*)
    run_tests "--coverage"
    ;;
esac

echo "âœ…Pre-commit hook finalizado com sucesso!"
