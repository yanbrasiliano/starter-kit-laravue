run_docker_command() {
  local command="$1"
  echo "ğŸš€ Executando: $command"
  if docker exec -i starterkit-app $command; then
    echo "âœ… Comando executado com sucesso: $command"
  else
    echo "âŒ Erro ao executar comando: $command"
    exit 1
  fi
}

run_docker_command "php artisan optimize:clear"
run_docker_command "php artisan test --env=testing --coverage --parallel"

echo -e "\nğŸ Testes finalizados com sucesso!\n"
